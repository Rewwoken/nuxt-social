model FollowRelation {
  createdAt DateTime @default(now()) @map("created_at")

  initiatorUser   User   @relation("Initiator", fields: [initiatorUserId], references: [id])
  initiatorUserId String

  followedUser   User   @relation("Followed", fields: [followedUserId], references: [id])
  followedUserId String

  @@id([initiatorUserId, followedUserId])
  @@unique([initiatorUserId, followedUserId])
  @@index([initiatorUserId])
  @@index([followedUserId])
  @@map("follow_relation")
}

